<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- ... other keys like CFBundleName, CFBundleExecutable etc. ... -->

    <!-- CAMERA PERMISSION -->
    <key>NSCameraUsageDescription</key>
    <string>This app needs access to the camera to scan QR codes and barcodes.</string>

    <!-- PHOTO LIBRARY PERMISSION (for scanning from gallery) -->
    <key>NSPhotoLibraryUsageDescription</key>
    <string>This app needs access to your photo library to allow you to select images containing QR codes or barcodes for scanning.</string>

    <!-- PHOTO LIBRARY ADDITIONS PERMISSION (OPTIONAL - if you want to SAVE generated codes to gallery) -->
    <!-- <key>NSPhotoLibraryAddUsageDescription</key> -->
    <!-- <string>This app needs permission to save generated QR codes or barcodes to your photo library.</string> -->

    <!-- CONTACTS PERMISSION (for adding scanned contacts) -->
    <key>NSContactsUsageDescription</key>
    <string>This app needs access to your contacts to save scanned contact information (vCards).</string>

    <!-- CALENDAR PERMISSION (for adding scanned events) -->
    <key>NSCalendarsUsageDescription</key>
    <string>This app needs access to your calendar to add scanned event information.</string>

    <!-- LOCATION PERMISSION (Usually for Wi-Fi scanning - often just 'When In Use' is needed) -->
    <!-- iOS needs location permission to access Wi-Fi network names (SSID) -->
    <key>NSLocationWhenInUseUsageDescription</key>
    <string>This app needs location access while running to scan for nearby Wi-Fi network details to create or connect via QR codes.</string>
    <!-- Optionally add Always and Full Accuracy if needed for specific background tasks, but usually not required for scanning -->
    <!-- <key>NSLocationAlwaysAndWhenInUseUsageDescription</key> -->
    <!-- <string>Provide reason for always access</string> -->
